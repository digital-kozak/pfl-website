  <script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
    
    // Sticky nav visibility on scroll
    const nav = document.getElementById('main-nav');
    let lastScroll = 0;
    
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      
      if (currentScroll > 100) {
        nav.classList.remove('opacity-0', '-translate-y-full');
        nav.classList.add('opacity-100', 'translate-y-0');
      } else {
        nav.classList.add('opacity-0', '-translate-y-full');
        nav.classList.remove('opacity-100', 'translate-y-0');
      }
      
      lastScroll = currentScroll;
    });
  </script>
