---

<Layout title="Reviews | Pagosa Forest Lodge" description="Read guest reviews of Pagosa Forest Lodge. 5-star ratings for our luxury mountain cabin near Wolf Creek Ski Resort in Colorado.">
  <!-- Hero -->
  <section class="relative py-32 hero-overlay">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/reviews-hero.jpg" 
        alt="Mountain valley view from Wolf Creek Pass" 
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative z-10 container-custom text-center text-white">
      <p class="text-sm uppercase tracking-[0.3em] mb-4">Guest Experiences</p>
      <h1 class="font-serif text-5xl md:text-7xl">
        <span class="italic">Reviews</span>
      </h1>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-16 bg-white">
    <div class="container-custom">
      <!-- Badges -->
      <div class="flex flex-wrap justify-center gap-6 mb-12">
        <!-- Guest Favorite Badge -->
        <div class="flex items-center justify-center">
          <img 
            src="/images/airbnb-guest-favorite.jpg" 
            alt="Airbnb Guest Favorite - One of the most loved homes on Airbnb" 
            class="h-28 md:h-32 object-contain rounded-lg shadow-md"
          />
        </div>
        
        <!-- Superhost Badge -->
        <div class="flex items-center justify-center">
          <img 
            src="/images/airbnb-superhost.jpg" 
            alt="Airbnb Superhost" 
            class="h-28 md:h-32 object-contain rounded-lg shadow-md"
          />
        </div>
      </div>
      
      <!-- Stats Grid -->
      <div class="grid grid-cols-3 gap-8 text-center max-w-3xl mx-auto pt-8 border-t border-gray-200">
        {stats.map((stat) => (
          <div>
            <p class="text-4xl md:text-5xl font-serif text-[#c9a227] mb-2">{stat.value}</p>
            <p class="text-sm uppercase tracking-wider text-gray-600">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Reviews Grid -->
  <section class="section-padding bg-[#faf9f6]">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Testimonials</p>
        <h2 class="font-serif text-4xl md:text-5xl text-[#0f1f0a]">What Guests <span class="italic">Are Saying</span></h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {reviews.map((review) => (
          <div class="bg-white p-8 rounded-lg shadow-sm">
            <!-- Stars -->
            <div class="flex text-[#c9a227] mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
            </div>
            
            <!-- Review Text -->
            <p class="text-gray-700 mb-6 leading-relaxed italic">"{review.text}"</p>
            
            <!-- Author -->
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-[#0f1f0a] flex items-center justify-center text-white font-serif text-lg">
                  {review.avatar}
                </div>
                <div class="ml-4">
                  <p class="font-medium text-[#0f1f0a]">{review.name}</p>
                  <p class="text-sm text-gray-500">{review.location}</p>
                </div>
              </div>
              <p class="text-sm text-gray-400">{review.date}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Review CTA -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-3xl md:text-4xl text-[#0f1f0a] mb-6">Share Your Experience</h2>
        <p class="text-gray-600 mb-8">
          Have you stayed at Pagosa Forest Lodge? We'd love to hear about your experience! 
          Your feedback helps us improve and helps future guests discover their perfect mountain getaway.
        </p>
        
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center px-8 py-4 bg-[#0f1f0a] text-white font-medium rounded-full hover:bg-[#1a3d14] transition-colors"
        >
          Leave a Review
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[#c9a227]">
    <div class="container-custom text-center">
      <h2 class="font-serif text-3xl md:text-4xl text-[#0f1f0a] mb-4">Ready to create your own memories?</h2>
      <p class="text-[#0f1f0a]/80 mb-8">Join our happy guests and book your stay today.</p>
      <a href="/book" class="inline-flex items-center justify-center px-8 py-4 bg-[#0f1f0a] text-white font-medium rounded-full hover:bg-[#1a3d14] transition-colors">
        Check Availability
      </a>
    </div>
  </section>
</Layout>
