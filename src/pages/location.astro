---
import Layout from '../layouts/Layout.astro';

const attractions = [
  {
    name: "Wolf Creek Ski Resort",
    distance: "20 min",
    description: "World-famous for the most snow in Colorado. Perfect for skiing, snowboarding, and winter adventures.",
    icon: "ski"
  },
  {
    name: "Pagosa Hot Springs",
    distance: "15 min",
    description: "Relax in the world's deepest geothermal hot springs. Multiple pools with stunning views.",
    icon: "hot"
  },
  {
    name: "San Juan River",
    distance: "10 min",
    description: "Gold Medal waters for fly fishing. Also great for tubing, kayaking, and riverside picnics.",
    icon: "water"
  },
  {
    name: "Downtown Pagosa",
    distance: "12 min",
    description: "Charming downtown with local restaurants, breweries, art galleries, and unique shops.",
    icon: "store"
  },
  {
    name: "Chimney Rock",
    distance: "35 min",
    description: "Ancient Ancestral Puebloan site with guided tours and breathtaking views.",
    icon: "mountain"
  },
  {
    name: "Treasure Falls",
    distance: "25 min",
    description: "Stunning 105-foot waterfall with an easy hiking trail and picnic area.",
    icon: "droplets"
  }
];

const activities = [
  {
    season: "Winter",
    activities: ["Skiing & Snowboarding", "Snowshoeing", "Sledding", "Hot Springs", "Cozy Fireside Evenings"]
  },
  {
    season: "Spring",
    activities: ["Wildflower Viewing", "Hiking", "Fly Fishing", "Wildlife Watching", "Waterfall Tours"]
  },
  {
    season: "Summer",
    activities: ["Hiking & Biking", "Lake Activities", "River Tubing", "Camping", "Stargazing"]
  },
  {
    season: "Fall",
    activities: ["Aspen Viewing", "Hunting", "Photography", "Fall Festivals", "Peaceful Retreats"]
  }
];
---

<Layout title="Location | Pagosa Forest Lodge">
  <!-- Hero -->
  <section class="relative py-32 hero-overlay">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?w=1920&q=80" 
        alt="San Juan Mountains" 
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative z-10 container-custom text-center text-white">
      <p class="text-sm uppercase tracking-[0.3em] mb-4">Find Us</p>
      <h1 class="font-serif text-5xl md:text-7xl">
        <span class="italic">Location</span>
      </h1>
    </div>
  </section>

  <!-- Address & Map -->
  <section class="section-padding bg-[#faf9f6]">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Address Info -->
        <div>
          <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Our Address</p>
          <h2 class="font-serif text-4xl md:text-5xl text-[#0f1f0a] mb-6">
            In The Heart Of The<br /><span class="italic">San Juan Mountains</span>
          </h2>
          
          <div class="bg-white p-8 rounded-lg shadow-sm mb-8">
            <div class="flex items-start space-x-4 mb-6">
              <div class="w-12 h-12 rounded-full bg-[#c9a227]/10 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-[#0f1f0a] mb-1">Pagosa Forest Lodge</p>
                <p class="text-gray-600">1563 Country Road 700<br>Pagosa Springs, CO 81147</p>
              </div>
            </div>
            
            <a 
              href="https://maps.google.com/?q=1563+Country+Road+700,+Pagosa+Springs,+CO+81147" 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center text-[#c9a227] hover:text-[#0f1f0a] transition-colors"
            >
              Get Directions
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </div>
          
          <p class="text-gray-600 leading-relaxed">
            Our secluded mountain cabin sits on 2 private acres surrounded by pristine 
            forest. Despite the peaceful seclusion, you're just minutes from world-class 
            skiing, natural hot springs, and the charming town of Pagosa Springs.
          </p>
        </div>

        <!-- Map -->
        <div class="aspect-[4/3] rounded-lg overflow-hidden shadow-lg">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12510.816837272098!2d-106.9648!3d37.2694!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x873c0b9c2f4c4c4b%3A0x4c4c4c4c4c4c4c4c!2sPagosa%20Springs%2C%20CO%2081147!5e0!3m2!1sen!2sus!4v1704067200000!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Pagosa Forest Lodge Location"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Distance Highlights -->
  <section class="section-padding bg-[#0f1f0a] text-white">
    <div class="container-custom">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <p class="text-4xl md:text-5xl font-serif text-[#c9a227] mb-2">20</p>
          <p class="text-sm uppercase tracking-wider text-white/70">Min to Ski</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-serif text-[#c9a227] mb-2">15</p>
          <p class="text-sm uppercase tracking-wider text-white/70">Min to Hot Springs</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-serif text-[#c9a227] mb-2">12</p>
          <p class="text-sm uppercase tracking-wider text-white/70">Min to Downtown</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-serif text-[#c9a227] mb-2">2</p>
          <p class="text-sm uppercase tracking-wider text-white/70">Private Acres</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Nearby Attractions -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Explore The Area</p>
        <h2 class="font-serif text-4xl md:text-5xl text-[#0f1f0a]">Nearby Attractions</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {attractions.map((attraction) => (
          <div class="p-6 bg-[#faf9f6] rounded-lg group hover:bg-[#0f1f0a] transition-colors duration-300">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 rounded-full bg-[#c9a227]/10 flex items-center justify-center group-hover:bg-[#c9a227]/20">
                <svg class="w-6 h-6 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {attraction.icon === 'ski' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2 20a2 2 0 002 2h16a2 2 0 002-2V8l-7 5-4-4-7 11zm3-9l4-4m8 0l4 4M9 11l3 3"/>}
                  {attraction.icon === 'hot' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9a4 4 0 014 4c0 2-1 3-2 5m-4-5a4 4 0 00-4 4c0 2 1 3 2 5m4-9v6m0-6V5a2 2 0 114 0v2"/>}
                  {attraction.icon === 'water' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2.69l5.66 5.66a8 8 0 11-11.31 0L12 2.69z"/>}
                  {attraction.icon === 'store' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 3h18v18H3V3zm3 3v12M9 6v12m6-12v12m6-12v12"/>}
                  {attraction.icon === 'mountain' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 21l4-10 4 10M6 21h12M12 11V7M9 14l3-3 3 3"/>}
                  {attraction.icon === 'droplets' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2.69l5.66 5.66a8 8 0 11-11.31 0L12 2.69zM12 2v20"/>}
                </svg>
              </div>
              <span class="text-sm font-medium text-[#c9a227] group-hover:text-[#fde380]">{attraction.distance}</span>
            </div>
            <h3 class="font-serif text-xl text-[#0f1f0a] mb-2 group-hover:text-white transition-colors">{attraction.name}</h3>
            <p class="text-gray-600 text-sm group-hover:text-white/70 transition-colors">{attraction.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Seasonal Activities -->
  <section class="section-padding bg-[#faf9f6]">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Year-Round Fun</p>
        <h2 class="font-serif text-4xl md:text-5xl text-[#0f1f0a]">Seasonal Activities</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {activities.map((season) => (
          <div class="bg-white p-8 rounded-lg">
            <h3 class="font-serif text-2xl text-[#0f1f0a] mb-6 text-center">{season.season}</h3>
            <ul class="space-y-3">
              {season.activities.map((activity) => (
                <li class="flex items-center text-gray-600">
                  <svg class="w-4 h-4 text-[#c9a227] mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {activity}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Getting Here -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Travel Info</p>
          <h2 class="font-serif text-4xl md:text-5xl text-[#0f1f0a]">Getting Here</h2>
        </div>

        <div class="space-y-8">
          <div class="flex flex-col md:flex-row items-start space-y-4 md:space-y-0 md:space-x-6 p-6 bg-[#faf9f6] rounded-lg">
            <div class="w-16 h-16 rounded-full bg-[#c9a227]/10 flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-serif text-xl text-[#0f1f0a] mb-2">By Air</h4>
              <p class="text-gray-600 mb-2">
                <strong>Durango-La Plata County Airport (DRO)</strong> — 1 hour drive<br>
                <strong>Albuquerque International Sunport (ABQ)</strong> — 3.5 hours drive<br>
                <strong>Denver International Airport (DEN)</strong> — 5.5 hours drive
              </p>
              <p class="text-gray-500 text-sm">We recommend renting a car for the most flexibility during your stay.</p>
            </div>
          </div>

          <div class="flex flex-col md:flex-row items-start space-y-4 md:space-y-0 md:space-x-6 p-6 bg-[#faf9f6] rounded-lg">
            <div class="w-16 h-16 rounded-full bg-[#c9a227]/10 flex items-center justify-center flex-shrink-0">
              <svg class="w-8 h-8 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path>
              </svg>
            </div>
            <div>
              <h4 class="font-serif text-xl text-[#0f1f0a] mb-2">By Car</h4>
              <p class="text-gray-600 mb-2">
                From Denver: Take US-285 S to US-160 W (5.5 hours)<br>
                From Albuquerque: Take US-550 N to US-64 W (3.5 hours)<br>
                From Colorado Springs: Take US-115 S to US-160 W (4 hours)
              </p>
              <p class="text-gray-500 text-sm">All-wheel drive recommended in winter months.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[#c9a227]">
    <div class="container-custom text-center">
      <h2 class="font-serif text-3xl md:text-4xl text-[#0f1f0a] mb-4">Your mountain adventure awaits</h2>
      <p class="text-[#0f1f0a]/80 mb-8">Book your stay and discover the magic of Pagosa Springs.</p>
      <a href="/book" class="inline-flex items-center justify-center px-8 py-4 bg-[#0f1f0a] text-white font-medium rounded-full hover:bg-[#1a3d14] transition-colors">
        Check Availability
      </a>
    </div>
  </section>
</Layout>
