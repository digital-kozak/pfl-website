import Layout from '../layouts/Layout.astro';
import FAQ from '../components/FAQ.astro';

const homeFaqs = [
  {
    question: "How do I book a stay at Pagosa Forest Lodge?",
    answer: "You can book directly through our website for the best rates and availability. Simply visit our <a href='/book'>Book Now</a> page, select your dates, and complete your reservation. Booking direct saves you money compared to third-party sites and ensures you get our full cancellation policy benefits."
  },
  {
    question: "Is Pagosa Forest Lodge pet-friendly?",
    answer: "Yes! We welcome well-behaved dogs on a case-by-case basis with prior approval and a pet fee. Our 5-acre property backs directly onto the San Juan National Forest, giving your furry friends plenty of space to explore. Please contact us before booking to discuss bringing your pet."
  },
  {
    question: "How far is the cabin from Wolf Creek Ski Resort?",
    answer: "Our cabin is approximately 40 minutes (23 miles) from Wolf Creek Ski Resort, known as 'The Most Snow in Colorado.' The scenic drive takes you over Wolf Creek Pass with stunning mountain views. We provide the perfect basecamp for your ski vacation with a private hot tub waiting for your return."
  },
  {
    question: "What amenities are included with the cabin?",
    answer: "Our 4-bedroom luxury cabin includes a private outdoor hot tub with mountain views, pellet stove fireplace, fully equipped gourmet kitchen, high-speed Starlink WiFi, smart TV, washer and dryer, gas grill, fire pit, and direct access to San Juan National Forest hiking trails. We also provide all linens, towels, and kitchen essentials."
  },
  {
    question: "What is there to do near Pagosa Springs?",
    answer: "Pagosa Springs offers year-round activities! In winter, ski at Wolf Creek Resort, snowshoe, or soak in the natural hot springs. Summer brings hiking, mountain biking, white water rafting, fishing in Gold Medal waters, and exploring ancient archaeological sites. We're 15 minutes from downtown Pagosa and The Springs Resort."
  },
  {
    question: "What is your cancellation policy?",
    answer: "We offer free cancellation up to 30 days before your arrival date. Cancellations made 14-30 days before arrival receive a 50% refund. Cancellations within 14 days are non-refundable, but we can offer a credit for a future stay. We recommend purchasing travel insurance for added protection."
  }
];
