---
import Layout from '../layouts/Layout.astro';

const indoorAmenities = [
  { icon: 'flame', title: 'Stone Fireplace', description: 'Cozy up by the wood-burning fireplace on chilly mountain evenings' },
  { icon: 'bath', title: 'Private Hot Tub', description: 'Relax in the outdoor hot tub with stunning mountain views' },
  { icon: 'chef-hat', title: 'Gourmet Kitchen', description: 'Fully equipped chef\'s kitchen with premium appliances' },
  { icon: 'wifi', title: 'High-Speed WiFi', description: 'Stay connected with fast, reliable internet throughout the cabin' },
  { icon: 'tv', title: 'Smart TVs', description: '65" smart TV in the great room plus TVs in each bedroom' },
  { icon: 'thermometer', title: 'Central Heating', description: 'Stay warm with efficient heating throughout the cabin' },
  { icon: 'droplets', title: 'Washer & Dryer', description: 'Full-size washer and dryer for your convenience' },
  { icon: 'bed', title: 'Premium Bedding', description: 'High-thread-count linens and luxury mattresses in all rooms' },
  { icon: 'coffee', title: 'Coffee Station', description: 'Keurig coffee maker with complimentary pods' },
  { icon: 'utensils', title: 'Fully Stocked', description: 'Cookware, dishes, and utensils for every culinary need' },
];

const outdoorAmenities = [
  { icon: 'mountain', title: 'Mountain Views', description: 'Panoramic views of the San Juan Mountains from every room' },
  { icon: 'tree-pine', title: 'Private Deck', description: 'Expansive deck with covered and open-air seating areas' },
  { icon: 'flame-kindling', title: 'Fire Pit', description: 'Outdoor fire pit with seating for memorable evenings' },
  { icon: 'grill', title: 'BBQ Grill', description: 'Gas grill perfect for mountain cookouts' },
  { icon: 'car', title: 'Parking', description: 'Ample parking for up to 4 vehicles including trailer space' },
  { icon: 'trees', title: 'Secluded Setting', description: 'Private 2-acre property surrounded by forest' },
];

const entertainmentAmenities = [
  { icon: 'gamepad-2', title: 'Board Games', description: 'Collection of board games and puzzles for family fun' },
  { icon: 'dices', title: 'Game Room', description: 'Dedicated game area with ping pong and more' },
  { icon: 'book-open', title: 'Reading Library', description: 'Curated selection of books and magazines' },
  { icon: 'music', title: 'Bluetooth Speaker', description: 'Portable speaker for indoor/outdoor entertainment' },
  { icon: 'binoculars', title: 'Wildlife Viewing', description: 'Binoculars for spotting local wildlife' },
];

const comfortAmenities = [
  { icon: 'air-vent', title: 'Air Conditioning', description: 'Central AC for those warm summer days' },
  { icon: 'fan', title: 'Ceiling Fans', description: 'Fans throughout for optimal air circulation' },
  { icon: 'shower-head', title: 'Rainfall Showers', description: 'Luxury rainfall showerheads in all bathrooms' },
  { icon: 'towel', title: 'Plush Towels', description: 'Hotel-quality bath and pool towels provided' },
  { icon: 'toilet-paper', title: 'Essentials Included', description: 'Toiletries, paper goods, and cleaning supplies' },
  { icon: 'key', title: 'Keyless Entry', description: 'Convenient keyless entry for easy check-in' },
];
---

<Layout title="Amenities | Pagosa Forest Lodge">
  <!-- Hero -->
  <section class="relative py-32 hero-overlay">
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=1920&q=80" 
        alt="Cabin amenities" 
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative z-10 container-custom text-center text-white">
      <p class="text-sm uppercase tracking-[0.3em] mb-4">What We Offer</p>
      <h1 class="font-serif text-5xl md:text-7xl">
        <span class="italic">Amenities</span>
      </h1>
    </div>
  </section>

  <!-- Introduction -->
  <section class="section-padding bg-[#faf9f6]">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="font-serif text-4xl md:text-5xl text-[#0f1f0a] mb-6">
          Everything For Your<br /><span class="italic">Perfect Stay</span>
        </h2>
        <p class="text-gray-600 leading-relaxed text-lg">
          At Pagosa Forest Lodge, we've thoughtfully curated every detail to ensure your 
          mountain retreat is as comfortable as it is memorable. From luxury linens to 
          outdoor adventures, we provide everything you need for an unforgettable getaway.
        </p>
      </div>
    </div>
  </section>

  <!-- Indoor Amenities -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Inside The Cabin</p>
        <h2 class="font-serif text-4xl md:text-5xl text-[#0f1f0a]">Indoor Amenities</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {indoorAmenities.map((amenity) => (
          <div class="p-6 bg-[#faf9f6] rounded-lg group hover:bg-[#0f1f0a] transition-colors duration-300">
            <div class="w-12 h-12 rounded-full bg-[#c9a227]/10 flex items-center justify-center mb-4 group-hover:bg-[#c9a227]/20">
              <svg class="w-6 h-6 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {amenity.icon === 'flame' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.5 14.5A2.5 2.5 0 0011 12c0-1.38-.5-2-1-3-1.072-2.143-.224-4.054 2-6 .5 2.5 2 4.9 4 6.5 2 1.6 3 3.5 3 5.5a7 7 0 11-14 0c0-1.153.433-2.294 1-3a2.5 2.5 0 002.5 2.5z"/>}
                {amenity.icon === 'bath' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 10h16a1 1 0 011 1v0a5 5 0 01-5 5H8a5 5 0 01-5-5v0a1 1 0 011-1zm5-6l-2 6m10-6l2 6M9 4v2m6-2v2"/>}
                {amenity.icon === 'chef-hat' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 13.87A4 4 0 017.41 6a5.11 5.11 0 019.18 0A4 4 0 0117.87 13.87L19 21H5l1.13-7.13zM12 6v8"/>}
                {amenity.icon === 'wifi' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12.55a11 11 0 0114.08 0M1.42 9a16 16 0 0121.16 0M8.53 16.11a6 16 0 016.95 0M12 20h.01"/>}
                {amenity.icon === 'tv' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2 7a2 2 0 012-2h16a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V7zm4 12h12M10 3l2 2 2-2"/>}
                {amenity.icon === 'thermometer' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 14.76V3.5a2.5 2.5 0 00-5 0v11.26a4.5 4.5 0 105 0z"/>}
                {amenity.icon === 'droplets' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2.69l5.66 5.66a8 8 0 11-11.31 0L12 2.69zM8 14h8M8 10h8"/>}
                {amenity.icon === 'bed' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2 4v16M2 8h18a2 2 0 012 2v10M2 14h18M6 8v8"/>}
                {amenity.icon === 'coffee' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18 8h1a4 4 0 010 8h-1M2 8h16v9a4 4 0 01-4 4H6a4 4 0 01-4-4V8zM6 1v3M10 1v3M14 1v3"/>}
                {amenity.icon === 'utensils' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 002-2V2M7 2v20M21 2v10a5 5 0 01-5 5h-2"/>}
              </svg>
            </div>
            <h3 class="font-serif text-xl text-[#0f1f0a] mb-2 group-hover:text-white transition-colors">{amenity.title}</h3>
            <p class="text-gray-600 text-sm group-hover:text-white/70 transition-colors">{amenity.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Outdoor Amenities -->
  <section class="section-padding bg-[#0f1f0a] text-white">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Outside The Cabin</p>
        <h2 class="font-serif text-4xl md:text-5xl">Outdoor Amenities</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {outdoorAmenities.map((amenity) => (
          <div class="p-6 bg-white/5 rounded-lg border border-white/10 hover:bg-white/10 transition-colors">
            <div class="w-12 h-12 rounded-full bg-[#c9a227]/20 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {amenity.icon === 'mountain' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 21l4-10 4 10M6 21h12M12 11V7M9 14l3-3 3 3"/>}
                {amenity.icon === 'tree-pine' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3L4 15h16L12 3zm0 0v18"/>}
                {amenity.icon === 'flame-kindling' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2c0 0-7 4-7 11v3l-2 2h18l-2-2v-3c0-7-7-11-7-11zm0 0v20m-5-8h10"/>}
                {amenity.icon === 'grill' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 6h18M4 10h16M7 14h10M9 18h6M12 6v12"/>}
                {amenity.icon === 'car' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14 16H9m10 0h3v-3.15a1 1 0 00-.84-.99L16 11l-2.7-3.6a1 1 0 00-.8-.4H5.24a2 2 0 00-1.8 1.1l-.8 1.63A6 6 0 002 12.42V16h2m14 0h-4m4 0v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2m4 0H9"/>}
                {amenity.icon === 'trees' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 3l4 8 4-8M4 13l4 8 4-8 4 8 4-8"/>}
              </svg>
            </div>
            <h3 class="font-serif text-xl mb-2">{amenity.title}</h3>
            <p class="text-white/70 text-sm">{amenity.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Entertainment & Comfort -->
  <section class="section-padding bg-[#faf9f6]">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Entertainment -->
        <div>
          <div class="mb-8">
            <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-2">Fun & Games</p>
            <h2 class="font-serif text-3xl text-[#0f1f0a]">Entertainment</h2>
          </div>

          <div class="space-y-4">
            {entertainmentAmenities.map((amenity) => (
              <div class="flex items-start space-x-4 p-4 bg-white rounded-lg">
                <div class="w-10 h-10 rounded-full bg-[#c9a227]/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {amenity.icon === 'gamepad-2' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 11h4M8 9v4m7-4h.01M18 9h.01M6 15h12a4 4 0 004-4v-2a6 6 0 00-12 0v2a4 4 0 01-4 4v-4H4v4a4 4 0 004 4z"/>}
                    {amenity.icon === 'dices' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2zM9 10h.01M15 10h.01M9 14h.01M15 14h.01"/>}
                    {amenity.icon === 'book-open' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2 3h6a4 4 0 014 4v14a3 3 0 00-3-3H2zM22 3h-6a4 4 0 00-4 4v14a3 3 0 013-3h7z"/>}
                    {amenity.icon === 'music' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 18V5l12-2v13M9 18a3 3 0 11-6 0 3 3 0 016 0zm12-2a3 3 0 11-6 0 3 3 0 016 0z"/>}
                    {amenity.icon === 'binoculars' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 12h4M12 10v4M4 16l2.5-2.5M20 16l-2.5-2.5M6 16a4 4 0 118 0 4 4 0 118 0"/>}
                  </svg>
                </div>
                <div>
                  <h4 class="font-serif text-lg text-[#0f1f0a] mb-1">{amenity.title}</h4>
                  <p class="text-gray-600 text-sm">{amenity.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Comfort -->
        <div>
          <div class="mb-8">
            <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-2">Thoughtful Touches</p>
            <h2 class="font-serif text-3xl text-[#0f1f0a]">Comfort & Convenience</h2>
          </div>

          <div class="space-y-4">
            {comfortAmenities.map((amenity) => (
              <div class="flex items-start space-x-4 p-4 bg-white rounded-lg">
                <div class="w-10 h-10 rounded-full bg-[#c9a227]/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    {amenity.icon === 'air-vent' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 3v18M18 3v18M3 9h18M3 15h18"/>}
                    {amenity.icon === 'fan' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 12m-9 0a9 9 0 119 0 9 9 0 11-9 0M12 3v3m0 15v3m9-9h-3M6 12H3m14.12-5.12l-2.12 2.12M8 16l-2.12 2.12m0-12.24L8 8m8 8l2.12 2.12"/>}
                    {amenity.icon === 'shower-head' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4h16M8 4v5a4 4 0 008 0V4M8 14h8M12 14v6M9 20h6"/>}
                    {amenity.icon === 'towel' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 8v12a2 2 0 002 2h12a2 2 0 002-2V8M4 8h16M9 8v14"/>}
                    {amenity.icon === 'toilet-paper' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 4h12a4 4 0 014 4v10a2 2 0 01-2 2H8a2 2 0 01-2-2V8a4 4 0 010-4zM6 8h.01M6 12h.01M6 16h.01"/>}
                    {amenity.icon === 'key' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>}
                  </svg>
                </div>
                <div>
                  <h4 class="font-serif text-lg text-[#0f1f0a] mb-1">{amenity.title}</h4>
                  <p class="text-gray-600 text-sm">{amenity.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[#0f1f0a]">
    <div class="container-custom text-center">
      <h2 class="font-serif text-3xl md:text-4xl text-white mb-4">Experience it all for yourself</h2>
      <p class="text-white/70 mb-8">Book your stay and enjoy our complete collection of amenities.</p>
      <a href="/book" class="btn-primary">Check Availability</a>
    </div>
  </section>
</Layout>
