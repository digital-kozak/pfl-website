---
import Layout from '../layouts/Layout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<Layout 
  title="Book Now | Pagosa Forest Lodge" 
  description="Check availability & book your stay at Pagosa Forest Lodge. Luxury 4BR cabin in Pagosa Springs, CO. Instant confirmation."
  breadcrumbs={[{ name: "Book Now", url: "/book" }]}
>
  <!-- Hero -->
  <section class="relative py-24 pt-32 sm:pt-24 hero-overlay">
    <div class="absolute inset-0 z-0">
      <img 
        src="/images/pfl-stargazing.jpg" 
        alt="Book your stay" 
        class="w-full h-full object-cover"
      />
    </div>
    
    <div class="relative z-10 container-custom text-center text-white">
      <p class="text-sm uppercase tracking-[0.3em] mb-4">Reservations</p>
      <h1 class="font-serif text-5xl md:text-6xl mb-6">
        Book Your <span class="italic">Stay</span>
      </h1>
      <p class="text-lg text-white/90 max-w-2xl mx-auto">
        Check availability and secure your dates. We can't wait to welcome you to the mountains!
      </p>
    </div>
  </section>

  <!-- Breadcrumb Navigation -->
  <Breadcrumb items={[{ name: "Book Now", url: "/book" }]} />

  <!-- Booking Widget -->
  <section class="section-padding bg-[#faf9f6]">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <p class="text-[#c9a227] text-sm uppercase tracking-[0.2em] mb-4">Check Availability</p>
          <h2 class="font-serif text-3xl md:text-4xl text-[#0f1f0a]">Select Your Dates</h2>
        </div>

        <!-- Lodgify Book Now Box Widget -->
        <div class="bg-white p-6 md:p-8 rounded-lg shadow-sm">
          <style>
            :root {
              --ldg-bnb-background: #ffffff;
              --ldg-bnb-border-radius: 0.42em;
              --ldg-bnb-box-shadow: 0px 24px 54px 0px rgba(0, 0, 0, 0.1);
              --ldg-bnb-padding: 14px;
              --ldg-bnb-input-background: #ffffff;
              --ldg-bnb-button-border-radius: 3.58em;
              --ldg-bnb-color-primary: #c9a227;
              --ldg-bnb-color-primary-lighter: #d4b43a;
              --ldg-bnb-color-primary-darker: #a0801f;
              --ldg-bnb-color-primary-contrast: #0f1f0a;
              --ldg-component-calendar-cell-selection-bg-color: #c9a227;
              --ldg-component-calendar-cell-selection-color: #0f1f0a;
              --ldg-component-calendar-cell-selected-bg-color: #d4b43a;
              --ldg-component-calendar-cell-selected-color: #0f1f0a;
              --ldg-bnb-font-family: inherit;
            }
            #lodgify-book-now-box {
              width: 100%;
            }
          </style>
          <div id="lodgify-book-now-box" 
            data-rental-id="493409" 
            data-website-id="449086" 
            data-slug="pagosaforestlodge" 
            data-language-code="en" 
            data-new-tab="true" 
            data-version="stable" 
            data-has-guests-breakdown 
            data-check-in-label='Check-in' 
            data-check-out-label='Check-out' 
            data-guests-label='Guests' 
            data-guests-singular-label='{{NumberOfGuests}} guest' 
            data-guests-plural-label='{{NumberOfGuests}} guests' 
            data-location-input-label='Location' 
            data-total-price-label='Total price:' 
            data-select-dates-to-see-price-label='Select dates to see total price' 
            data-minimum-price-per-night-first-label='From' 
            data-minimum-price-per-night-second-label='per night' 
            data-book-button-label='Book Now' 
            data-guests-breakdown-label='Guests' 
            data-adults-label='{"one":"adult","other":"adults"}' 
            data-adults-description='Ages {minAge} or above' 
            data-children-label='{"one":"child","other":"children"}' 
            data-children-description='Ages {minAge}-{maxAge}' 
            data-children-not-allowed-label='Not suitable for children' 
            data-infants-label='{"one":"infant","other":"infants"}' 
            data-infants-description='Under {maxAge}' 
            data-infants-not-allowed-label='Not suitable for infants' 
            data-pets-label='{"one":"pet","other":"pets"}' 
            data-pets-not-allowed-label='Not allowed' 
            data-done-label='Done'>
          </div>
          <script src="https://app.lodgify.com/book-now-box/stable/renderBookNowBox.js" defer></script>
          
          <!-- Fallback: Direct booking link if widget doesn't load -->
          <div id="booking-fallback" class="hidden text-center py-8">
            <p class="text-gray-600 mb-4">Having trouble with the booking widget?</p>
            <a href="https://checkout.lodgify.com/pagosaforestlodge/en/" target="_blank" rel="noopener" class="inline-flex items-center justify-center px-8 py-4 bg-[#c9a227] text-[#0f1f0a] font-medium rounded-full hover:bg-[#b8921f] transition-colors">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              Book Direct on Lodgify
            </a>
          </div>
          
          <script>
            // Force strikethrough on disabled dates after widget loads
            (function() {
              function applyStrikethrough() {
                const disabledDates = document.querySelectorAll('#lodgify-book-now-box [class*="day"][class*="disabled"], #lodgify-book-now-box [aria-disabled="true"], #lodgify-book-now-box button[disabled]');
                disabledDates.forEach(el => {
                  el.style.textDecoration = 'line-through';
                  el.style.opacity = '0.5';
                });
              }
              
              // Apply after widget loads
              setTimeout(applyStrikethrough, 3000);
              setTimeout(applyStrikethrough, 5000);
              
              // Also apply when calendar is opened
              document.addEventListener('click', function(e) {
                if (e.target.closest('#lodgify-book-now-box')) {
                  setTimeout(applyStrikethrough, 500);
                  setTimeout(applyStrikethrough, 1000);
                }
              });
            })();
            
            // Show fallback if widget doesn't load within 5 seconds
            setTimeout(function() {
              const widget = document.getElementById('lodgify-book-now-box');
              const fallback = document.getElementById('booking-fallback');
              if (widget && widget.children.length === 0 && fallback) {
                fallback.classList.remove('hidden');
              }
            }, 5000);
          </script>
        </div>

        <!-- Booking Info -->
        <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[#c9a227]/10 flex items-center justify-center">
              <svg class="w-8 h-8 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="font-serif text-xl text-[#0f1f0a] mb-2">Flexible Dates</h3>
            <p class="text-gray-600 text-sm">Check availability for any dates. Weekend and week-long stays available.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[#c9a227]/10 flex items-center justify-center">
              <svg class="w-8 h-8 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="font-serif text-xl text-[#0f1f0a] mb-2">Best Rate Guaranteed</h3>
            <p class="text-gray-600 text-sm">Book direct for the best rates and exclusive offers.</p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-[#c9a227]/10 flex items-center justify-center">
              <svg class="w-8 h-8 text-[#c9a227]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="font-serif text-xl text-[#0f1f0a] mb-2">24/7 Support</h3>
            <p class="text-gray-600 text-sm">Questions? We're here to help make your booking easy.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Property Details -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <div>
            <h3 class="font-serif text-2xl text-[#0f1f0a] mb-6">Booking Information</h3>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">Check-in: 4:00 PM</p>
                  <p class="text-gray-600 text-sm">Early check-in available upon request</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">Check-out: 10:00 AM</p>
                  <p class="text-gray-600 text-sm">Late check-out subject to availability</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">Keyless Entry</p>
                  <p class="text-gray-600 text-sm">Convenient self check-in with secure code</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">Cancellation Policy</p>
                  <p class="text-gray-600 text-sm">Free cancellation up to 30 days before arrival</p>
                </div>
              </div>
            </div>
          </div>

          <div>
            <h3 class="font-serif text-2xl text-[#0f1f0a] mb-6">House Rules</h3>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">No Smoking</p>
                  <p class="text-gray-600 text-sm">Smoking is not permitted anywhere on the property</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">No Parties/Events</p>
                  <p class="text-gray-600 text-sm">Respect our neighbors and keep noise levels down</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">Pet Policy</p>
                  <p class="text-gray-600 text-sm">Please inquire about pet-friendly options</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-[#c9a227] mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="font-medium text-[#0f1f0a]">Maximum Occupancy</p>
                  <p class="text-gray-600 text-sm">Up to 8 guests across 4 bedrooms</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact for Help -->
  <section class="section-padding bg-[#0f1f0a] text-white">
    <div class="container-custom text-center">
      <h2 class="font-serif text-3xl md:text-4xl mb-4">Questions About Your Booking?</h2>
      <p class="text-white/70 mb-8 max-w-2xl mx-auto">
        Need help finding the perfect dates or have special requests? 
        We're here to make your booking experience seamless.
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/contact" class="btn-secondary">Contact Us</a>
        <a href="tel:+19704442290" class="inline-flex items-center justify-center px-8 py-4 border-2 border-[#c9a227] text-[#c9a227] font-medium rounded-full hover:bg-[#c9a227] hover:text-[#0f1f0a] transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          (970) 444-2290
        </a>
      </div>
    </div>
  </section>
</Layout>
