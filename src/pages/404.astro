---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | Pagosa Forest Lodge">
  <section class="min-h-screen flex items-center justify-center bg-[#faf9f6] py-32">
    <div class="container-custom text-center">
      <p class="text-[#c9a227] text-sm uppercase tracking-[0.3em] mb-4">404 Error</p>
      <h1 class="font-serif text-6xl md:text-8xl text-[#0f1f0a] mb-6">
        Page Not Found
      </h1>
      
      <p class="text-gray-600 text-lg max-w-md mx-auto mb-10">
        Oops! The page you're looking for seems to have wandered off into the mountains.
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/" class="btn-primary">Return Home</a>
        <a href="/book" class="btn-secondary border-[#0f1f0a] text-[#0f1f0a] hover:bg-[#0f1f0a] hover:text-white">Book Your Stay</a>
      </div>
    </div>
  </section>
</Layout>
